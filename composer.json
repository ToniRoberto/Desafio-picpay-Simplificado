{
    "name": "picpay/desafio-backend",
    "description": "Desafio técnico Backend PicPay - Sistema de transferências simplificado",
    "type": "project",
    "require": {
        "php": "^8.2",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "monolog/monolog": "^3.5",
        "doctrine/dbal": "^3.7",
        "vlucas/phpdotenv": "^5.5",
        "guzzlehttp/guzzle": "^7.8",
        "respect/validation": "^2.2",
        "php-di/php-di": "^6.1",
        "php-di/slim-bridge": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "PicPay\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PicPay\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=8",
        "cs-check": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}

